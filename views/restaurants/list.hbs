
<div class="container">
  <div class="row mx-auto">
    {{#each restaurants as |restaurant|}}
      <div class="col-xl-3 col-sm-6 col-xs-12 gy-4 d-flex align-items-stretch">
        <div class="card w-100 " style="width: 18rem;">
          <div class="position-relative">
            <img src="{{restaurant.image}}" class="card-img-top" alt="...">
            <button class="like-button border-0">
              <i
                data-id="{{restaurant.id}}"
                class="
                  like-action fa fa-heart
                  {{#userLikedRestaurant likes=../likes restaurant=restaurant}}icon-liked{{/userLikedRestaurant}}
                "
              >
              </i>
            </button>
          </div>
          <div class="card-body d-flex flex-column mt-2">
            <h6 class="card-title">{{restaurant.name}}</h6>
            <small class="card-text text-small mb-3">{{restaurant.description}}</small>
            <a href="/restaurants/{{restaurant.id}}" class="btn btn-primary mt-auto">Detail</a>
            <a href="/restaurants/{{restaurant.id}}/edit" class="btn btn-success mt-1">Editar</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/axios.js"></script>

